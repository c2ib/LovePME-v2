{% extends 'baseUsers.html.twig' %}

{% block title %}Modification du profil
{% endblock %}

{% block body %}
{{ parent() }}

<div class="col-10 p-5 shadow">
    <h2 class="py-3">Modification du mot de passe de
        {{app.user.lastName}}
        {{app.user.firstName}}
    </h2>
    <form method="post">
        <div class="form-field mb-3">
            <label for="pass">Mot de passe</label>
            <input type="password" id="pass" name="pass" class="form-control">
        </div>
        <div class="form-field">
            <label for="pass2">Confirmer le mot de passe</label>
            <input type="password" id="pass2" name="pass2" class="form-control">
        </div>
        <button type="submit" class="btn text-white mt-3" id="profile_modification_password">Valider</button>

    </form>
</div>

{% endblock %}