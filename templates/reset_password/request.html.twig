{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
<!--  Réinitialiser votre mot de passe -->
<section id="reinitialisation_mot_passe" class="bg-light">

    <div class="container">
        <div class="row mb-5">
            <div class="col-md-8 mx-auto text-center">
                <h5 class="mb-3">Nouveau mot de passe</h5>
                <h1 class="text-uppercase text-center">Réinitialiser votre mot de passe</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8 mx-auto">

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Saisissez votre adresse email et nous vous enverrons un
                lien pour réinitialiser votre mot de passe.
            </small>
        </div>

        <button class="btn  text-center text-white profile_btn m-3">Envoyer</button>
    {{ form_end(requestForm) }}
     </div>
    </div>
    </div>
    
    </section>
{% endblock %}
